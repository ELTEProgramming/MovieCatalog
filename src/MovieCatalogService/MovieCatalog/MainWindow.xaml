<Window x:Class="MovieCatalog.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <DockPanel LastChildFill="True">
        <TextBox DockPanel.Dock="Top" Text="{Binding Id, UpdateSourceTrigger=PropertyChanged}" />
        <Button DockPanel.Dock="Top" Command="{Binding SearchCommand}">Search</Button>
        <TextBlock Text="{Binding Movie.Title}" />
    </DockPanel>
</Window>
